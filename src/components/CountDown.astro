


<!-- Display the countdown timer -->
<div id="countdown"></div>

<!-- Include the countdown timer script -->
<script>
  // Define the target date and time
const targetDate = new Date("April 24, 2024 19:00:00 UTC").getTime();

  // Get the countdown element
  const countdownElement: any = document.getElementById('countdown');

  // Update the countdown every second
  setInterval(() => {
    // Get the current date and time
    const now = new Date().getTime();

    // Calculate the time remaining until the target date and time
    const distance = targetDate - now;

    // Calculate the number of days, hours, minutes, and seconds remaining
    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    // Update the countdown element
    countdownElement.innerText = `🥔🚀 PoKing going worldwide in T-minus: ${days}d ${hours}h ${minutes}m ${seconds}s`;

    // Add styles to the countdown element
    // countdownElement.style.backgroundColor = 'yellow';
    // countdownElement.style.padding = '10px';
    // countdownElement.style.border = '2px solid black';
    // countdownElement.style.color = 'black';
    // countdownElement.style.fontWeight = 'bold';

    // If the countdown is over, display a message
    if (distance < 0) {
      clearInterval(0);
      countdownElement.innerText = "LAUNCHED!🚀🐸🧑‍🚀";
    }
  }, 1000);
</script>